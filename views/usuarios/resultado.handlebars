        <h1>Resultados para {{parametro}}:</h1>
    {{else}}
        <h1>Resultados:</h1>
    {{/if}}

    {{#each usuarios}}
        <div>
            <h3>{{dataValues.nome}}</h3>
            <p><b>Cargo:</b> {{dataValues.Cargos.dataValues.cargo}}</p>
